<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MapsActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.03">

        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 km"

            android:id="@+id/textviewDistanz"
            android:layout_weight="0.5" />

        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 min"
            android:id="@+id/textviewDauer"
            android:layout_weight="0.5" />
    </LinearLayout>

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"

        android:id="@+id/map"
        tools:context=".MapsActivity"
        android:name="com.google.android.gms.maps.SupportMapFragment" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.08">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/mr_ic_audiotrack_light"
            android:id="@+id/imageView"
            android:layout_weight="0.2" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:id="@+id/texteditZiel"

            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_weight="0.6" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.08">

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonRoute"
            android:text="Route suchen"
            android:textSize="12sp"
            android:layout_weight="0.4"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4" />
    </LinearLayout>

    <Button
        android:text="ALARM"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:id="@+id/buttonAlarm"
        android:textSize="45sp"
        android:background="@android:color/holo_red_dark"
        android:layout_weight="0.2"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.02"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        >

        <Button
            android:text="Einstellungen"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/buttonEinstellungen"

            android:textSize="12sp"
            android:layout_weight="0.3" />

        <Button
            android:text="Button"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:id="@+id/buttonAngekommen"
            android:textSize="12sp"
            android:layout_weight="0.3" />

        <Button
            android:text="Kontakte"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:id="@+id/buttonKontakte"

            android:textSize="12sp"
            android:layout_weight="0.3" />

    </LinearLayout>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.01"
        android:background="@color/cast_expanded_controller_ad_label_background_color">

        <Button
            android:text="ZURÃœCK"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_margin="4dp"

            android:id="@+id/buttonZurueck"
            android:background="@color/cast_expanded_controller_background_color"
            android:textColor="@color/cast_expanded_controller_text_color" />

        <TextView
            android:text="Einstellungen"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/headerEinstellungen"
            android:textSize="18sp"
            android:textAlignment="center"
            android:elevation="24dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"

            android:inputType="textPersonName"
            android:text="Name"

            android:id="@+id/editText2"
            android:textAlignment="center" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"></LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        >

        <TextView
            android:text="Vorhandene Kontakte"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:id="@+id/textView3"
            android:textSize="18sp"
            android:textAlignment="center"
            android:background="@color/cast_expanded_controller_ad_label_background_color" />

        <ScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            android:id="@+id/contactButton"></LinearLayout>
        </ScrollView>
    </LinearLayout>


</LinearLayout>